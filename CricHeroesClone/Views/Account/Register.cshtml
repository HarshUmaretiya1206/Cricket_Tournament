@model CricHeroesClone.Models.User
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form method="post" asp-action="Register">
    <div class="mb-3"><label>Username</label><input asp-for="Username" class="form-control" /></div>
    <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
    <div class="mb-3"><label>Password</label><input asp-for="PasswordHash" type="password" class="form-control" /></div>
    <div class="mb-3">
        <label>Role</label>
        <select asp-for="Role" class="form-select">
            <option>Viewer</option>
            <option>Scorer</option>
            <option>Captain</option>
            <option>Admin</option>
        </select>
    </div>
    <button class="btn btn-success">Register</button>
</form>
