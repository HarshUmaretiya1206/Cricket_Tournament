@model IEnumerable<CricHeroesClone.Models.TeamStanding>
@{
    ViewData["Title"] = "Team Standings";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-trophy text-warning"></i> Team Standings</h2>
                <div>
                    <a href="@Url.Action("Index", "Live")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Back to Live Matches
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Tournament != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <h5 class="mb-0">
                        <i class="fas fa-trophy"></i> @ViewBag.Tournament.Name
                    </h5>
                </div>
            </div>
        </div>
    }

    <!-- Standings Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-list-ol"></i> Tournament Rankings</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-warning">
                                    <tr>
                                        <th width="5%">#</th>
                                        <th width="25%">Team</th>
                                        <th width="8%" class="text-center">MP</th>
                                        <th width="8%" class="text-center">W</th>
                                        <th width="8%" class="text-center">L</th>
                                        <th width="8%" class="text-center">T</th>
                                        <th width="10%" class="text-center">Points</th>
                                        <th width="12%" class="text-center">Net RR</th>
                                        <th width="16%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                        foreach (var standing in Model)
                                        {
                                            string rowClass = rank <= 4 ? "table-success" : 
                                                           rank <= 8 ? "table-info" : 
                                                           rank >= Model.Count() - 2 ? "table-danger" : "";
                                            
                                            <tr class="@rowClass">
                                                <td class="text-center">
                                                    @if (rank == 1)
                                                    {
                                                        <i class="fas fa-crown text-warning"></i>
                                                    }
                                                    else if (rank == 2)
                                                    {
                                                        <i class="fas fa-medal text-secondary"></i>
                                                    }
                                                    else if (rank == 3)
                                                    {
                                                        <i class="fas fa-medal text-bronze"></i>
                                                    }
                                                    else
                                                    {
                                                        <strong>@rank</strong>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        @if (!string.IsNullOrEmpty(standing.TeamLogo))
                                                        {
                                                            <img src="@standing.TeamLogo" alt="@standing.TeamName" 
                                                                 class="team-logo me-2" width="30" height="30">
                                                        }
                                                        else
                                                        {
                                                            <div class="team-logo-placeholder me-2">
                                                                <i class="fas fa-flag"></i>
                                                            </div>
                                                        }
                                                        <div>
                                                            <strong>@standing.TeamName</strong>
                                                            @if (rank <= 4)
                                                            {
                                                                <span class="badge bg-success ms-2">Qualified</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-primary">@standing.MatchesPlayed</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-success">@standing.MatchesWon</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-danger">@standing.MatchesLost</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-warning text-dark">@standing.MatchesTied</span>
                                                </td>
                                                <td class="text-center">
                                                    <strong class="text-primary">@standing.Points</strong>
                                                </td>
                                                <td class="text-center">
                                                    @if (standing.NetRunRate >= 0)
                                                    {
                                                        <span class="text-success">+@standing.NetRunRate.ToString("F3")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">@standing.NetRunRate.ToString("F3")</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="@Url.Action("TeamDetails", "Team", new { id = standing.TeamId })" 
                                                           class="btn btn-outline-info btn-sm">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <a href="@Url.Action("TeamMatches", "Match", new { teamId = standing.TeamId })" 
                                                           class="btn btn-outline-primary btn-sm">
                                                            <i class="fas fa-calendar"></i> Matches
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            rank++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Points System Explanation -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card border-info">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0"><i class="fas fa-info-circle"></i> Points System</h6>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li><i class="fas fa-check text-success"></i> Win: <strong>3 points</strong></li>
                                            <li><i class="fas fa-minus text-warning"></i> Tie/No Result: <strong>1 point</strong></li>
                                            <li><i class="fas fa-times text-danger"></i> Loss: <strong>0 points</strong></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-success">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0"><i class="fas fa-trophy"></i> Qualification</h6>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li><span class="badge bg-success">Top 4</span> Advance to Playoffs</li>
                                            <li><span class="badge bg-info">5-8</span> Mid-table</li>
                                            <li><span class="badge bg-danger">Bottom 2</span> Relegation Zone</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-trophy fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No Standings Available</h4>
                            <p class="text-muted">Team standings will appear here once matches are played.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.team-logo {
    border-radius: 50%;
    object-fit: cover;
}

.team-logo-placeholder {
    width: 30px;
    height: 30px;
    background-color: #f8f9fa;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.table-success {
    background-color: rgba(40, 167, 69, 0.1) !important;
}

.table-info {
    background-color: rgba(23, 162, 184, 0.1) !important;
}

.table-danger {
    background-color: rgba(220, 53, 69, 0.1) !important;
}

.badge {
    font-size: 0.8em;
}

.table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85em;
    letter-spacing: 0.5px;
}

.table td {
    vertical-align: middle;
}

.btn-group-sm .btn {
    font-size: 0.75em;
}
</style>
