@model CricHeroesClone.Models.Match

@{
    ViewData["Title"] = "Add Match";
}

<h2>Add Match</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Tournament Id</label>
        <input asp-for="TournamentId" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Team A Id</label>
        <input asp-for="TeamAId" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Team B Id</label>
        <input asp-for="TeamBId" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Date</label>
        <input asp-for="MatchDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Venue</label>
        <input asp-for="Venue" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
