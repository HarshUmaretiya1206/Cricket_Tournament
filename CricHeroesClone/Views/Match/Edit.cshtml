@model CricHeroesClone.Models.Match
@{
    ViewData["Title"] = "Edit Match";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">
                <i class="fas fa-edit text-warning"></i> Edit Match
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-gamepad"></i> Update Match Information
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group">
                            <label asp-for="TournamentId" class="form-label">
                                <i class="fas fa-trophy"></i> Tournament
                            </label>
                            <input asp-for="TournamentId" class="form-control" placeholder="Tournament ID" />
                            <span asp-validation-for="TournamentId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TeamAId" class="form-label">
                                <i class="fas fa-flag"></i> Team A ID
                            </label>
                            <input asp-for="TeamAId" class="form-control" placeholder="Team A ID" />
                            <span asp-validation-for="TeamAId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TeamBId" class="form-label">
                                <i class="fas fa-flag"></i> Team B ID
                            </label>
                            <input asp-for="TeamBId" class="form-control" placeholder="Team B ID" />
                            <span asp-validation-for="TeamBId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MatchDate" class="form-label">
                                <i class="fas fa-calendar"></i> Match Date
                            </label>
                            <input asp-for="MatchDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="MatchDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Venue" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Venue
                            </label>
                            <input asp-for="Venue" class="form-control" placeholder="Enter venue" />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="form-label">
                                <i class="fas fa-info-circle"></i> Status
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="Scheduled">Scheduled</option>
                                <option value="Live">Live</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Result" class="form-label">
                                <i class="fas fa-trophy"></i> Result
                            </label>
                            <input asp-for="Result" class="form-control" placeholder="Enter match result" />
                            <span asp-validation-for="Result" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Match
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Matches
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Match Edit page loaded');
        });
    </script>
}
