@model IEnumerable<CricHeroesClone.Models.Player>
@{
    ViewData["Title"] = "Players";
    Layout = "_Layout";
    var userRole = Context.Session.GetString("UserRole");
    var isAdmin = userRole == "Admin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">
                <i class="fas fa-user text-info"></i> Players
            </h1>
        </div>
    </div>

    <!-- Player Statistics -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Players</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Players Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-list"></i> All Players
                    </h6>
                    @if (isAdmin)
                    {
                        <a href="@Url.Action("Create", "Player")" class="btn btn-info btn-sm">
                            <i class="fas fa-plus"></i> Add New Player
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead class="table-info">
                                    <tr>
                                        <th><i class="fas fa-user"></i> Player Name</th>
                                        <th><i class="fas fa-star"></i> Role</th>
                                        <th><i class="fas fa-flag"></i> Team</th>
                                        <th><i class="fas fa-cogs"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var player in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@player.Name</strong>
                                            </td>
                                            <td>
                                                @{
                                                    var roleClass = player.Role switch
                                                    {
                                                        "Batsman" => "badge-primary",
                                                        "Bowler" => "badge-success",
                                                        "All-rounder" => "badge-warning",
                                                        "Wicket-keeper" => "badge-info",
                                                        _ => "badge-secondary"
                                                    };
                                                }
                                                <span class="badge @roleClass">@player.Role</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">@player.TeamName</span>
                                            
                                           
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (isAdmin)
                                                    {
                                                        <a href="@Url.Action("Edit", "Player", new { id = player.Id })" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <form method="post" action="@Url.Action("Delete", "Player")" style="display: inline;" 
                                                              onsubmit="return confirm('Are you sure you want to delete this player?')">
                                                            <input type="hidden" name="id" value="@player.Id" />
                                                            <button type="submit" class="btn btn-danger btn-sm">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user fa-3x text-muted mb-3"></i>
                            <h5>No Players Available</h5>
                            <p class="text-muted">There are currently no players in the system.</p>
                            @if (isAdmin)
                            {
                                <a href="@Url.Action("Create", "Player")" class="btn btn-info">
                                    <i class="fas fa-plus"></i> Add First Player
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Players page loaded');
        });
    </script>
}
