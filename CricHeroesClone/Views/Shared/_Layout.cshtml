@{
    Layout = null;
    var appName = "CricHeroesClone";
    var username = Context.Session.GetString("Username");
    
    var userRole = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .navbar-brand { font-weight: bold; }
        .nav-link { font-weight: 500; }
        .dropdown-menu { min-width: 200px; }
        .user-info { color: #fff; margin-right: 15px; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-cricket-bat-ball"></i> @appName
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tournament" asp-action="Index">
                                    <i class="fas fa-trophy"></i> Tournaments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Team" asp-action="Index">
                                    <i class="fas fa-flag"></i> Teams
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Player" asp-action="Index">
                                    <i class="fas fa-user"></i> Players
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Match" asp-action="Index">
                                    <i class="fas fa-gamepad"></i> Matches
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Score" asp-action="Index">
                                    <i class="fas fa-calculator"></i> Scores
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item-text"><strong>Role:</strong> @userRole</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (userRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                                        </a></li>
                                    }
                                    @if (userRole == "Scorer")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Scorer" asp-action="Dashboard">
                                            <i class="fas fa-calculator"></i> Scorer Dashboard
                                        </a></li>
                                    }
                                    @if (userRole == "Captain")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Captain" asp-action="Dashboard">
                                            <i class="fas fa-crown"></i> Captain Dashboard
                                        </a></li>
                                    }
                                    @if (userRole == "Viewer")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Viewer" asp-action="Dashboard">
                                            <i class="fas fa-eye"></i> Viewer Dashboard
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - @appName - Cricket Management System</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
