@model IEnumerable<CricHeroesClone.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

<h2>Tournaments</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Add Tournament</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tournament ID</th>
            <th>Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Name</td>
                <td>@t.StartDate?.ToShortDateString()</td>
                <td>@t.EndDate?.ToShortDateString()</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
