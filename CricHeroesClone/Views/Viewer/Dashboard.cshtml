@{
    ViewData["Title"] = "Viewer Dashboard";
    Layout = "_Layout";
    
    // Cast ViewBag properties to proper types to avoid RuntimeBinderException
    var liveMatches = ViewBag.LiveMatches as IEnumerable<dynamic> ?? new List<dynamic>();
    var upcomingMatches = ViewBag.UpcomingMatches as IEnumerable<dynamic> ?? new List<dynamic>();
    var teams = ViewBag.Teams as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">
                <i class="fas fa-eye text-info"></i> Cricket Viewer Dashboard
            </h1>
        </div>
    </div>

    <!-- Welcome Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-info-circle"></i> Welcome to Cricket Heroes!
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">Stay updated with live matches, team standings, and tournament information. As a viewer, you have access to all the latest cricket updates and match details.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Live Matches -->
    @if (liveMatches.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-success text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-play-circle"></i> Live Matches
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var match in liveMatches)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-success h-100">
                                        <div class="card-body">
                                            <h6 class="card-title text-success">
                                                <i class="fas fa-broadcast-tower"></i> @match.TeamAName vs @match.TeamBName
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar"></i> @match.MatchDate.ToString("MMM dd, yyyy")
                                                </small>
                                            </p>
                                            <a href="@Url.Action("MatchDetails", "Viewer", new { matchId = match.Id })" 
                                               class="btn btn-success btn-sm">
                                                <i class="fas fa-play"></i> Watch Live
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Upcoming Matches -->
    @if (upcomingMatches.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-primary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-calendar-alt"></i> Upcoming Matches
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                                <thead class="table-primary">
                                    <tr>
                                        <th><i class="fas fa-users"></i> Teams</th>
                                        <th><i class="fas fa-calendar"></i> Date</th>
                                        <th><i class="fas fa-trophy"></i> Tournament</th>
                                        <th><i class="fas fa-map-marker-alt"></i> Venue</th>
                                        <th><i class="fas fa-cogs"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var match in upcomingMatches.Take(5))
                                    {
                                        <tr>
                                            <td><strong>@match.TeamAName vs @match.TeamBName</strong></td>
                                            <td>@match.MatchDate.ToString("MMM dd, yyyy")</td>
                                            <td>@(match.TournamentName ?? "Friendly")</td>
                                            <td>@(match.Venue ?? "TBD")</td>
                                            <td>
                                                <a href="@Url.Action("MatchDetails", "Viewer", new { matchId = match.Id })" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Navigation -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning text-dark">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-compass"></i> Quick Navigation
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("LiveMatches", "Viewer")" class="btn btn-success btn-block h-100">
                                <i class="fas fa-play-circle fa-2x mb-2"></i><br>
                                Live Matches
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("TeamStandings", "Viewer")" class="btn btn-primary btn-block h-100">
                                <i class="fas fa-trophy fa-2x mb-2"></i><br>
                                Team Standings
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Tournament")" class="btn btn-info btn-block h-100">
                                <i class="fas fa-medal fa-2x mb-2"></i><br>
                                Tournaments
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Index", "Team")" class="btn btn-warning btn-block h-100">
                                <i class="fas fa-flag fa-2x mb-2"></i><br>
                                All Teams
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Teams Overview -->
    @if (teams.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-secondary text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-flag"></i> Teams Overview
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var team in teams.Take(6))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100 border-secondary">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">
                                                <i class="fas fa-flag text-secondary"></i> @team.TeamName
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-crown"></i> Captain: @team.CaptainName
                                                </small>
                                            </p>
                                            <a href="@Url.Action("Index", "Team")" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-info-circle"></i> View Team
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- No Data Message -->
    @if (!liveMatches.Any() && !upcomingMatches.Any() && !teams.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-body text-center">
                        <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                        <h5>Welcome to Cricket Heroes!</h5>
                        <p class="text-muted">There are currently no matches or teams available. Check back later for updates!</p>
                        <div class="mt-3">
                            <a href="@Url.Action("Index", "Tournament")" class="btn btn-primary me-2">
                                <i class="fas fa-trophy"></i> View Tournaments
                            </a>
                            <a href="@Url.Action("Index", "Match")" class="btn btn-info">
                                <i class="fas fa-gamepad"></i> View Matches
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Viewer Dashboard loaded successfully');
            
            // Add some interactivity
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}
